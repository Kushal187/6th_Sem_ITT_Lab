    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:background="@drawable/custom_edittext"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp"
            android:layout_below="@id/maid2"
            android:id="@+id/maid3"
            android:padding="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/baseline_person_24"
                    android:layout_margin="20dp"
                    android:id="@+id/maid_image2"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/maid_image2"
                    android:text="Name: "
                    android:layout_margin="10dp"
                    android:textColor="@color/domesticgored"
                    android:fontFamily="@font/poppins"
                    android:textSize="18dp"
                    android:id="@+id/maid_name_label2"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignBaseline="@id/maid_name_label2"
                    android:layout_margin="10dp"
                    android:layout_toRightOf="@id/maid_name_label2"
                    android:fontFamily="@font/poppins"
                    android:text="Anita"
                    android:textColor="@color/domesticgored"
                    android:textSize="18dp"
                    android:id="@+id/maid_name2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/maid_name_label2"
                    android:layout_toEndOf="@id/maid_image2"
                    android:text="Age: "
                    android:layout_margin="10dp"
                    android:textColor="@color/domesticgored"
                    android:fontFamily="@font/poppins"
                    android:textSize="18dp"
                    android:id="@+id/maid_age_label2"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/maid_name2"
                    android:layout_alignBaseline="@id/maid_age_label2"
                    android:layout_margin="10dp"
                    android:layout_toRightOf="@id/maid_age_label2"
                    android:layout_alignStart="@id/maid_name2"
                    android:fontFamily="@font/poppins"
                    android:text="21"
                    android:textColor="@color/domesticgored"
                    android:textSize="15dp"
                    android:id="@+id/maid_age2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/maid_age_label2"
                    android:layout_toEndOf="@id/maid_image2"
                    android:text="Experience: "
                    android:layout_margin="10dp"
                    android:textColor="@color/domesticgored"
                    android:fontFamily="@font/poppins"
                    android:textSize="18dp"
                    android:id="@+id/maid_exp_label2"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/maid_age2"
                    android:layout_alignBaseline="@id/maid_exp_label2"
                    android:layout_margin="10dp"
                    android:layout_toRightOf="@id/maid_exp_label2"
                    android:fontFamily="@font/poppins"
                    android:text="4+ Years"
                    android:textColor="@color/domesticgored"
                    android:textSize="15dp"
                    android:id="@+id/maid_exp2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/maid_exp_label2"
                    android:layout_toEndOf="@id/maid_image2"
                    android:text="Services: "
                    android:layout_margin="10dp"
                    android:textColor="@color/domesticgored"
                    android:fontFamily="@font/poppins"
                    android:textSize="18dp"
                    android:id="@+id/maid_services_label2"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/maid_age2"
                    android:layout_alignBaseline="@id/maid_services_label2"
                    android:layout_margin="10dp"
                    android:layout_toRightOf="@id/maid_services_label2"
                    android:fontFamily="@font/poppins"
                    android:text="Cooking"
                    android:textColor="@color/domesticgored"
                    android:textSize="15dp"
                    android:id="@+id/maid_services2"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/maid_services2"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="25dp"
                    android:text="Hire"
                    android:textColor="@color/projectwhite"
                    android:backgroundTint="@color/domesticgored"
                    android:id="@+id/button2"
                    />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>